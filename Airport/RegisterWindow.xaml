<Window x:Class="Airport.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Airport"
        mc:Ignorable="d"
       Title="Регистрация" Height="400" Width="600" MinWidth="600" MinHeight="400">
    <StackPanel Margin="20">

        <Image Height="62" Width="104" Source="C:\Users\USER\Desktop\Airport\Airport\Images\image-Photoroom (12).png"/>

        <TextBlock Text="Логин" FontFamily="Times New Roman" FontSize="16"/>
        <TextBox x:Name="LoginBox" Margin="0,5" FontFamily="Times New Roman"/>

        <TextBlock Text="Пароль" FontFamily="Times New Roman" FontSize="16"/>
        <PasswordBox x:Name="PasswordBox" Margin="0,5" FontFamily="Times New Roman"/>

        <Button Content="Зарегистрироваться" Click="Register_Click" Margin="0,10" Background="Black" Foreground="White" FontFamily="Times New Roman" FontSize="14">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="5" Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </StackPanel>
</Window>
