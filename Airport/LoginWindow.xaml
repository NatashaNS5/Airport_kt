<Window x:Class="Airport.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Airport"
        mc:Ignorable="d"
         Title="Вход" Height="400" Width="600" MinWidth="600" MinHeight="400">
    <StackPanel Margin="20">
        <Image Height="62" Width="104" Source="C:\Users\USER\Desktop\Airport\Airport\Images\image-Photoroom (12).png"/>
        <StackPanel Margin="0,5">
            <TextBlock Text="Логин" FontSize="16" FontFamily="Times New Roman"/>
            <TextBox x:Name="LoginBox" FontFamily="Times New Roman"/>
        </StackPanel>
        <TextBlock Text="Пароль" FontFamily="Times New Roman" FontSize="16"/>
        <PasswordBox x:Name="PasswordBox" Margin="0,10" FontFamily="Times New Roman"/>
        <Button Content="Войти" Click="Login_Click" Margin="0,10" Background="Black" Foreground="White" FontSize="14" FontFamily="Times New Roman">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="5" Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button Content="Регистрация" Click="OpenRegister_Click" Background="Black" Foreground="White" FontSize="14" FontFamily="Times New Roman">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="5" Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </StackPanel>
</Window>