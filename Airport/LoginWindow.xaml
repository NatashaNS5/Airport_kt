<Window x:Class="Airport.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Airport"
        mc:Ignorable="d"
         Title="Вход" Height="300" Width="400">
    <StackPanel Margin="20">
        <Image Height="62" Width="104" Source="/image-Photoroom (12).png"/>
        <StackPanel Margin="0,5">
            <TextBlock Text="Логин"/>
            <TextBox x:Name="LoginBox"/>
        </StackPanel>
        <PasswordBox x:Name="PasswordBox" Margin="0,10"/>
        <Button Content="Войти" Click="Login_Click" Margin="0,10"/>
        <Button Content="Регистрация" Click="OpenRegister_Click"/>
    </StackPanel>
</Window>