<Window x:Class="Airport.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Airport"
        mc:Ignorable="d"
       Title="Аэропорт Саранск" Height="400" Width="600" MinWidth="600" MinHeight="400">
    <Grid>
        <StackPanel>
            <Image Height="83" Width="131" Source="C:\Users\USER\Desktop\Airport\Airport\Images\image-Photoroom (12).png"/>
        </StackPanel>

        <DockPanel Margin="0,147,0,0">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                <Button Content="Добавить" Click="Add_Click" Margin="5" Width="280" Background="Black" Foreground="White" FontFamily="Times New Roman" FontSize="14">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="5" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="Редактировать" Click="Edit_Click" Margin="5" Width="280" Background="Black" Foreground="White" FontFamily="Times New Roman" FontSize="14">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="5" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
            <DataGrid Name="FlightsGrid" AutoGenerateColumns="True" Margin="10" FontFamily="Times New Roman" />
        </DockPanel>
    </Grid>
</Window>