<Window x:Class="Airport.EditFlightWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Airport.Utils"
        mc:Ignorable="d"
        Title="Редактировать рейс" Height="400" Width="400"  MinWidth="400" MinHeight="400">
    <StackPanel Margin="20">

        <TextBlock Text="Направление" FontFamily="Times New Roman"/>
        <ComboBox Name="DirectionBox" ItemsSource="{x:Static local:Directions.All}" Margin="0,5" FontFamily="Times New Roman"/>

        <TextBlock Text="Номер рейса" FontFamily="Times New Roman"/>
        <TextBox Name="FlightNumberBox" Margin="0,5" FontFamily="Times New Roman"/>

        <TextBlock Text="Самолёт" FontFamily="Times New Roman"/>
        <TextBox Name="PlaneModelBox" Margin="0,5" FontFamily="Times New Roman"/>

        <TextBlock Text="Авиакомпания" FontFamily="Times New Roman"/>
        <TextBox Name="AirlineBox" Margin="0,5" FontFamily="Times New Roman"/>

        <TextBlock Text="Время прибытия" FontFamily="Times New Roman"/>
        <DatePicker Name="ArrivalPicker" Margin="0,5" FontFamily="Times New Roman"/>

        <TextBlock Text="Время отправления" FontFamily="Times New Roman"/>
        <DatePicker Name="DeparturePicker" Margin="0,5" FontFamily="Times New Roman"/>

        <Button Content="Сохранить" Click="Save_Click" Margin="0,10" Background="Black" Foreground="White" FontFamily="Times New Roman" FontSize="14">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="5" Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </StackPanel>
</Window>
